<!DOCTYPE html>
<html>
  <head>
    <title>StorageUi</title>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= stylesheet_link_tag    "http://code.jquery.com/ui/1.9.2/themes/base/jquery-ui.css" %>
    <%= stylesheet_link_tag    "http://fonts.googleapis.com/css?family=Open+Sans:400,600" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>

  <body>
    <div id="container">
      <%= yield %>

      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>

      <% if user_signed_in? %>
        <%= link_to('Logout', destroy_user_session_path, :method => :delete) %>
      <% else %>
        <%= link_to('Login', new_user_session_path)  %>  
      <% end %>
    </div>
  </body>

  <script type="text/javascript">
    $(function() {
      $('.units-table').dataTable({
        "iDisplayLength": 100,
      });

      $( "#tabs" ).tabs();
      $("select, input, textarea, number").uniform();
    });
  </script>
</html>
